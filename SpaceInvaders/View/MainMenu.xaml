<Window x:Class="View.MainMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:View"
        mc:Ignorable="d"
        Title="MainMenu" Height="300" Width="502.521">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black" Offset="0"/>
                <GradientStop Color="#FF162BF7" Offset="1"/>
                <GradientStop Color="#FF121A63" Offset="0.555"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Image HorizontalAlignment="Left" Height="100" Margin="126,10,0,0" VerticalAlignment="Top" Width="247" Source="logo.jpg"/>
        <Button Name="PlayButton" Content="Play" HorizontalAlignment="Left" Margin="201,134,0,0" VerticalAlignment="Top" Width="75" Click="PlayButton_Click"/>
        <Button Name="HighscoreButton" Content="Highscores" HorizontalAlignment="Left" Margin="201,168,0,0" VerticalAlignment="Top" Width="75" Click="HighscoreButton_Click"/>
        <Button Name="ExitButton" Content="Exit" HorizontalAlignment="Left" Margin="201,203,0,0" VerticalAlignment="Top" Width="75" Click="ExitButton_Click"/>

    </Grid>
</Window>
